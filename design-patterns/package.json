{
  "name": "javascript-rocks",
  "version": "1.0.0",
  "description": "design pattern with Javascript and typescript",
  "main": "index.js",
  "scripts": {
    "lint-staged": "linted-staged",
    "commit": "git-cz",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "prettier --write ./**/*.js && eslint --fix . && echo 'Lint complete.'"
  },
  "keywords": [
    "kata",
    "refactor"
  ],
  "author": "chenxiaoyao <chenxiaoyao6228@163.com> (https://chenxiaoyao6228.github.io)",
  "license": "MIT",
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "**/*.{js,jsx}"
    ]
  },
  "lint-staged": {
    "*.js": [
      "jest --bail --findRelatedTests && echo 'Test complete.'",
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commitmsg": "commitlint -E GIT_PARAMS"
    }
  },
  "commitizen": {
    "path": "./node_modules/cz-conventional-changelog"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.6.0",
    "@babel/plugin-transform-modules-commonjs": "^7.6.0",
    "@babel/plugin-transform-runtime": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-typescript": "^7.6.0",
    "@babel/runtime": "^7.6.0",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@commitlint/prompt": "~8.1.0",
    "async": "^3.2.0",
    "babel-jest": "^24.9.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "~3.0.2",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.5",
    "import-local": "^3.0.2",
    "jest": "^24.9.0",
    "jest-config": "^24.9.0",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2"
  }
}