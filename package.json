{
  "name": "js-rocks",
  "version": "independent",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "#commit-command": "git add . && yarn run commit",
    "build": "lerna exec -- yarn build",
    "test:vue": "lerna exec --scope @js-rocks/vue-tiny -- yarn test:watch",
    "build:vue": "lerna exec --scope @js-rocks/vue-tiny -- yarn build:watch",
    "build:lodash": "lerna exec --scope @js-rocks/lodash-tiny -- yarn build:watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "eslint-plugin-jest": "^26.1.5",
    "husky": "3.1.0",
    "lerna": "^4.0.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "typescript": "^4.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,js}": [
      "node --max_old_space_size=8192 ./node_modules/.bin/prettier -w",
      "node --max_old_space_size=8192 ./node_modules/.bin/eslint --fix --color",
      "git add"
    ]
  },
  "description": "a javascript library rebuild series",
  "main": "index.js",
  "repository": "https://github.com/chenxiaoyao6228/js-rocks.git",
  "author": "chenxiaoyao <chenxiaoyao6228@163.com>",
  "license": "MIT"
}
