{
  "name": "@js-rocks/react-tiny",
  "version": "0.1.0-alpha.0",
  "description": "react",
  "keywords": [
    "react"
  ],
  "license": "MIT",
  "author": "ChenXiaoyao <chenxiaoyao6228@163.com> (http://www.chenxiaoyao.cn/)",
  "main": "index.js",
  "scripts": {
    "build": "yarn parcel build index.html",
    "commit": "git-cz",
    "dev": "yarn parcel index.html",
    "lint": "eslint --fix . && echo 'Lint complete.'",
    "lint-staged": "linted-staged",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commitmsg": "commitlint -E GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": [
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "collectCoverageFrom": [
      "src/*.js",
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "moduleFileExtensions": [
      "js"
    ],
    "testEnvironment": "jsdom",
    "testRegex": "/test/.*\\.(test|spec)\\.(js)$"
  },
  "devDependencies": {
    "node-libs-browser": "^2.2.1",
    "parcel-bundler": "^1.12.4"
  },
  "dependencies": {
    "@js-rocks/lodash-tiny": "workspace:*"
  },
  "commitizen": {
    "path": "./node_modules/cz-conventional-changelog"
  }
}