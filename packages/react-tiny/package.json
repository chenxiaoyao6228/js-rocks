{
  "name": "@js-rocks/react-tiny",
  "version": "1.0.0",
  "description": "react",
  "main": "index.js",
  "scripts": {
    "lint-staged": "linted-staged",
    "commit": "git-cz",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint --fix . && echo 'Lint complete.'",
    "dev": "yarn parcel index.html",
    "build": "yarn parcel build index.html"
  },
  "keywords": [
    "react"
  ],
  "author": "ChenXiaoyao <chenxiaoyao6228@163.com> (http://www.chenxiaoyao.cn/)",
  "license": "MIT",
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testRegex": "/test/.*\\.(test|spec)\\.(js)$",
    "moduleFileExtensions": [
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.js",
      "src/**/*.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commitmsg": "commitlint -E GIT_PARAMS"
    }
  },
  "commitizen": {
    "path": "./node_modules/cz-conventional-changelog"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.6.0",
    "@babel/plugin-transform-modules-commonjs": "^7.6.0",
    "@babel/plugin-transform-runtime": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@commitlint/prompt": "~8.1.0",
    "@parcel/logger": "^2.0.0-alpha.2",
    "babel-jest": "^24.9.0",
    "babel-types": "^6.26.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "~3.0.2",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "jest-config": "^24.9.0",
    "lint-staged": "^9.2.5",
    "node-libs-browser": "^2.2.1",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.18.2"
  }
}
